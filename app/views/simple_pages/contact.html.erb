<section class="contact" id="contact">
  <div class="container">
    <div class="row">
      <div class="col-12 col-xs-12 col-sm-12 col-md-12">
	<%= image_tag("contactlogo.jpg", style: "display: block; margin: auto;", class: "img-fluid") %>
      </div>
    </div>
    <div class="row">
      <div class="col-6 col-xs-6 col-sm-6 col-md-6">
        <br><br>
        <h4>Feedback</h4>
      	<p>I would love to hear from you! Inquries regarding commissions may take one to three business days. Please feel free to contact me.
      	</p>
      	<h4><i class="fas fa-envelope"></i> Email</h4>
      	  <p>qwerty.wla@gmail.com</p>
      	<h4><i class="fas fa-phone"></i> Phone</h4>
      	  <p>(415) 347-1886
      	  <br>Monday – Friday 9:00am – 5:00pm PST
      	  </p>
      </div> <!-- end col -->
      <div class="col-6 col-xs-6 col-sm-6 col-md-6">
        <br><br>
        <%= flash[:notice] %>

        <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
          <div class="row">
            <div class="col-md-6">
              <%= form.label :name %>
              <p><%= form.text_field :name, class: "form-control", placeholder: "Enter Name", required: true %></p>
            </div> <!-- end col -->
            <div class="col-md-6">
              <%= form.label :email %>
              <%= form.text_field :email, class: "form-control", placeholder: "Enter Email", required: true, validates: :email %>
            </div> <!-- end col -->
            <div class="col-md-12">
              <p><%= form.text_area :message, class: "form-control", placeholder: "Enter Your Message Here", rows: 6, required: true %></p>
            </div> <!-- end col -->
          </div> <!-- end form-row -->
          <%= form.submit "Send", class: "form_label" %>
          <% end %>
      </div> <!-- end contactcol2 -->
    </div>
  </div>
</section> <!-- end contact section -->
