<section class="product" id="product">
  <div class="container">
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-4">
        <%= image_tag(@product.image_url, class: "img-fluid") unless @product.image_url.nil? %>
        <br><br>
        <%= button_to 'Add To Cart', {:controller => "orders", :action => "create", :product => @product } , :method=>:post, class: "btn btn-success btn-block" %>
        <p align="right"><%= link_to 'Back', products_path, class: "btn btn-dark" %></p>
      </div>
      <div class="col-md-6">
        <h3 class="card-title"><%= @product.name %></h3>
        <p class="card-text"><%= @product.description %></p>
        <li class="list-group-item">Price: USD <%= @product.price ? @product.price : 0 %></li>
        <p class="mt-2"><div class="rated" data-score="<%= @product.average_rating %>">Average Rating: </div></p>
        <%= render 'new_comment' %>
        <%= render 'comments' %>
        <%= will_paginate @comments %>
      </div>
      <div class="col-md-1">
      </div>
    </div>
  </div>
</section>
