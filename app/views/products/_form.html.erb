<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <section class="product" id="product">
    <div class="container">
      <div class="row"
      <div class="container-notices">
        <% if notice %>
          <p id="notice" class="alert alert-success" role="alert"><%= notice %></p>
        <% end %>

        <% if alert %>
          <p id="alert" class="alert alert-warning" role="alert"><%= alert %></p>
        <% end %>
      </div>
      <div class="row">
        <div class="col-4 col-md-4 col-sm-4">
          <div class="card bg-light mb-3" id="productsform">
            <%= image_tag(@product.image_url, class: "img-fluid") unless @product.image_url.nil? %>
          </div>
        </div>
        <div class="col-6 col-md-6 col-sm-6">
          <div class="card bg-light mb-3" id="productsform">
            <br />
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :image_url %>
              <%= form.text_field :image_url, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :price %>
              <%= form.text_field :price, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :colour %>
              <%= form.text_field :colour, class: "form-control" %>
            </div>
              <%= form.submit 'Update Product', class:"btn btn-dark" %>
              <%= link_to 'Show', @product, class: "btn btn-dark" %>
              <%= link_to 'Back', products_path, class: "btn btn-dark" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
