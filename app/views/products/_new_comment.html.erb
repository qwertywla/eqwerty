<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <div class="rating">Rating: </div>
    </p>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, required: true %>
    </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
