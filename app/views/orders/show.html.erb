<section class="order" id="order">
  <div class="container">
    <div class="row">
      <div class="col-3 col-md-3 col-sm-3">
      </div>
      <div class="col-6 col-md-6 col-sm-6">
        <div class="card bg-light mb-3">
          Order ID: <%= @order.id %>
          <br>
          Product Name: <%= @order.product.name %>
          <br>
          Product Price: <%= number_to_currency(@order.product.price/100.to_f) %>
          <br>
          Total Price: <%= number_to_currency(@order.total/100.to_f) %>
        </div>
      </div>
      <div class="col-3 col-md-3 col-sm-3">
      </div>
    </div>
  </div>
</section>
